<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/FFF">
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/forget_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C555"
        app:tb_barHeight="65dp"
        app:tb_leftImageResource="@drawable/icon_back_white"
        app:tb_leftText="返回登陆"
        app:tb_sideTextPadding="20dp"
        app:tb_actionPadding="20dp"
        app:tb_titleText="找回密码-验证方式" />
    <com.xuexiang.xui.widget.tabbar.EasyIndicator
        android:id="@+id/forget_easy_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicator_bottom_line_height="0dp"
        app:indicator_height="42dp"
        app:indicator_textSize="14sp"
        app:indicator_width="0dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/forget_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
